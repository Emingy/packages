{
    "extends": "@emingy/configs/tsconfig",
    "compilerOptions": {
        "paths": {
            "@emingy/core/*": ["src/*"],
            "@storybook-components/*": ["../../storybook/components/*"],
            "@storybook-utils/*": ["../../storybook/utils/*"]
        },
        "outDir": "./dist",
        "baseUrl": "./"
    },
    "include": ["src/**/*", "types.d.ts"],
    "exclude": [
        "dist",
        "node_modules",
        "**/*.stories.*",
        "**/__tests__",
        "**/*.mdx",
        "src/styles/**/story"
    ]
}

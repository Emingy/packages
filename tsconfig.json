{
    "extends": "@emingy/configs/tsconfig",
    "compilerOptions": {
        "paths": {
            "@emingy/core/*": ["src/*"],
            "@storybook-components/*": [".storybook/components/*"],
            "@storybook-utils/*": [".storybook/utils/*"]
        },
        "baseUrl": "./",
        "rootDir": "./src",
        "noEmit": true
    },
    "include": ["src/**/*"],
    "exclude": ["lib", "node_modules", ".storybook", "src/styles", "**/__tests__"]
}
